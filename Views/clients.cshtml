<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Clients</title>
  </head>
  <body>
    <h1>Clients</h1>
    @if(Model.Count==0)
    {
      <p>Sorry no Clients have been added yet</p>
    }
    else
    {
      foreach(var individualClient in Model)
      {
        <li>@individualClient.GetName()</li>
      }
    }
    <a href="/client/new">Add a New Client</a>
    <a href="/">Return Home</a>
  </body>
</html>
